{
  "manifest_version": 3,
  "name": "MyCookieManager",
  "version": "1.5",
  "description": "A siple way of cookie saving and setup",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/logo-16.png",
      "32": "img/logo-32.png",
      "48": "img/logo-48.png",
      "128": "img/logo-128.png"
    }
  },
  "permissions": [
  "cookies",
  "downloads"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "img/logo-16.png",
    "32": "img/logo-32.png",
    "48": "img/logo-48.png",
    "128": "img/logo-128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}